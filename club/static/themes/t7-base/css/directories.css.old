/* users */
div.pricing-table-block {
    margin-bottom: 20px;
    padding-bottom: 10px;
    border-bottom: 1px solid #ccc;
}

div.pricing-table-block h4 {
    margin: 5px 0 5px 0;
    padding: 0;
    text-transform: none;
    font-size: 13px;
}

div.pricing-table-block table {
    text-align: left;
    border: 1px solid #DDD;
    -webkit-border-radius: 3px;
    -moz-border-radius: 3px;
    border-radius: 3px;
}

div.pricing-table-block table tr.alt {
    background-color: #FFFFFF;
}

div.pricing-table-block table td {
    padding: 5px;
}

div.pricing-table-block table tr.header-row td {
    width: 180px;
    background-color: #EFEFEF;
}

/* payment method */
div.id_payment_method ul{
    padding: 0px;
}
div.id_payment_method ul li{
    list-style: none;
}
div.id_payment_method input{
    width: 1em !important;
}

.pricing-wrap{
    margin-bottom: 1em;
    width: 400px;
}
.pricing-wrap th{
    text-align: left;
    border-bottom: 1px dashed #ccc;
}

/* export page */
#directory-export .alert {
    padding: 8px 35px 8px 14px;
    margin-bottom: 20px;
    text-shadow: 0 1px 0 rgba(255, 255, 255, 0.5);
    background-color: #fcf8e3;
    border: 1px solid #fbeed5;
    -webkit-border-radius: 4px;
    -moz-border-radius: 4px;
    border-radius: 4px;
}
#directory-export .alert {
    color: #c09853;
}
#directory-export ul li {
    list-style: none;
}
#directory-export .display-hide{
    display: none;
}
#directory-export input[type="submit"] {
    padding: 4px 12px;
}
#directory-export select {
    width: 220px;
    border: 1px solid #CCC;
    background-color: white;
    margin-bottom: 10px;
    padding: 4px 6px;
}

