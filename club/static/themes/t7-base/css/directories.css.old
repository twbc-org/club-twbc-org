 ------------------------- */
.t .directory-wrap .fb-connect {
    margin-top: 10px;
}

.t .directory-image img {max-width: 500px;}

/* form */
div.forms div.form-field div.id_first_name .field input {
    width: 30%;
}

div.forms div.form-field div.id_last_name .field input {
    width: 30%;
}
div.forms div.form-field div.id_address .field input {
    width: 30%;
}
div.forms div.form-field div.id_address2 .field input {
    width: 30%;
}
div.forms div.form-field div.id_phone .field input {
    width: 18%;
}
div.forms div.form-field div.id_phone2 .field input {
    width: 18%;
}
