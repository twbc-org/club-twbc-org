.t {
    width: 90%;
}
.t h2 {
    margin: 0 auto 10px 0;
}

.t ul.directories-nav {
    margin: 0; padding: 0;
    list-style-type: none;
    margin-bottom: 20px;
}
.t ul.directories-nav li {
    display: inline;
}

.t .directories-wrap {
    margin-bottom: 20px;
}

.t .directory-wrap {
    padding: 10px;
    position: relative;
}

.t .directories-wrap .directory-wrap h2 {
    width: 85%;
}
.t .directories-wrap .directory-wrap .content {
    margin-bottom: 10px;
}
.t .options {
    text-align: right;
    position: absolute;
    top: -30px; right: 0;
    padding: 5px;
    white-space: nowrap;
}
.t .options-search {
    position: static;
}
.t .quick-options {
    float: right;
    margin-right: 5px;
}
.t .quick-options ul {
    margin: 0; padding: 0;
    list-style-type: none;
}

.t .dropdown-options {
    float: right;
    display: none; /* todo: port-over dropdown js */
}
.t .dropdown-options span {
    font-size: .7em;
}
.t .dropdown-options ul {
    display: none;
}

.t h1 {
    margin: 0;
}
.t .back-to-search {
    margin-bottom: 20px;
}

.t form.search-form input[type="text"] {
    width: 60%;
    margin-bottom: 10px;
    padding: 5px;
}

.t form.search-form input[type="submit"] {
    padding: 5px;
    cursor: pointer;
}

.t .search-form .first-row span,
.t .search-form .first-row .search-category,
.t .search-form .first-row .q,
.t .search-form input[type='submit'] {
    float: left;
}

.t .search-form .first-row #id_search_category {
    height: 29px;
    margin-right: 10px;
    padding-top: 7px;
}

.t .search-form .first-row .search-category .errorlist {
    color: red;
    margin-left: 3px;
    margin-top: 5px;
}

.t .search-form .first-row .q .errorlist{
    color: red;
    margin-left: 3px;
    margin-top: 5px;
}

.t .search-form .first-row #id_q {
    width: 170px;
    margin-right: 10px;
    margin-bottom: 0px;
}

.t .search-form input[type="submit"] {
    width: 60px;
}

.t .search-form #form-row {
    margin-bottom: 10px;
}

.t .search-form {
    margin-top: 20px;
    margin-bottom: 40px;
}

.t .search-form .first-row span {
    padding-top: 10px;
    padding-right: 5px;
}

/* id_activation_dt */
